{% extends '_mdb/mdb_base.html.twig' %}

{% block pagetop_fluid %}
    {{ include ("_mdb/mdb_page_top_section.html.twig", {
        'title' : title
    }) }}
{% endblock %}



{% block script %}
    {% if app.request.attributes.get('_route') == 'orden_trabajo_reservar' %}
        <script type="text/javascript">
            $('.datepicker-next-dates').pickadate({
        // Escape any “rule” characters with an exclamation mark (!).

        // Strings and translations
        monthsFull: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre',
            'Noviembre', 'Diciembre'],
        monthsShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
        weekdaysFull: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
        weekdaysShort: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sa'],
        showMonthsShort: true,
        showWeekdaysFull: undefined,

// Buttons
        today: 'Hoy',
        clear: 'Limpiar',
        close: 'Cerrar',

// Accessibility labels
        labelMonthNext: 'Mes siguiente',
        labelMonthPrev: 'Mes anterior',
        labelMonthSelect: 'Seleccione un mes',
        labelYearSelect: 'Seleccione un año',

//Formatf
        format: 'dd/mm/yyyy',
        formatSubmit: 'dd/mm/yyyy',
        // hiddenPrefix: 'prefix__',
        // hiddenSuffix: '__suffix'
        editable: true,
        // min: true,
        disable: [
            {from: [0, 0, 0], to: true}
        ],
    });

        </script>
    {% endif %}
{% endblock %}
{% block body_fluid %}
<div class="white">
    <div class="row">
        <div id="" class="col-lg-12">
            {{ form_start(form) }}
                {% set aux = (registrar is defined ? 'plus' : 'search') %}
                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 md-form md-form-date">{{ form_row(form.fechaBuscar, {'attr' : { 'class' : 'datepicker-next-dates', 'required' : true }}) }}</div>
                <button name="submitForm" type="submit" class="btn btn-primary btn-floating"><span class="glyphicon glyphicon-{{ aux }}"></span> </button>
                <button name="resetForm" class="btn btn-floating btn-danger" type="reset"><span class="glyphicon glyphicon-remove"></span></button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{{ include('_mdb/mdb_index_delete_modal.html.twig') }}
{% endblock %}
