{% extends '_mdb/mdb_base.html.twig' %}

{% block form_start %}
    {{ form_start(form) }}
{% endblock %}

{% block pagetop_fluid %}
    {{ include ("_mdb/mdb_page_top_section.html.twig", {
        'title' : 'Registrar jornada para el d√≠a en curso',
        'link' : {
            'back' : path('jornada_index'),
            'submit' : 'Confirmar'
        }
    }) }}
{% endblock %}

{% block body_fluid %}
    <div class="white">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <div class="clearfix">
                    {% if form.fecha is defined and form.fecha %}
                    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12 md-form">{{ form_row(form.fecha, {'attr' : { 'class' : 'datepicker' }}) }}</div>
                    {% endif %}
                    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12 md-form">{{ form_row(form.fondoInicial) }}</div>
                    <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12 md-form">
                        {{ form_row(form.tecnicos   , {'attr' : {'class' : 'mdb-select md-form', 'searchable' : 'Buscar'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_end %}
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest':false}) }}
{% endblock %}
