{% extends '_mdb/mdb_base.html.twig' %}

{% block form_start %}
    {{ form_start(form) }}
{% endblock %}

{% block pagetop_fluid %}
    {{ include ("_mdb/mdb_page_top_section.html.twig", {
        'title' : 'Datos de la materia prima',
        'link' : {
            'back' : path('materia_prima_index'),
            'submit' : 'Confirmar'
        }
    }) }}
{% endblock %}

{% block body_fluid %}
    <div class="white">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <div class="clearfix">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 md-form">{{ form_row(form.nombre) }}</div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 md-form">{{ form_row(form.descripcion) }}</div>
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 md-form">{{ form_row(form.tipoEquipoDestino, {'attr' : {'class' : 'mdb-select'}}) }}</div>
                    {% if form.cantidad is defined %}<div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 md-form">{{ form_row(form.cantidad) }}</div>{% endif %}
                    {% if form.precio is defined %}<div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 md-form">{{ form_row(form.precio) }}</div>{% endif %}
                    {% if form.unidadMedida is defined %}<div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 md-form">{{ form_row(form.unidadMedida) }}</div>{% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_end %}
    {{ form_end(form) }}
{% endblock %}
