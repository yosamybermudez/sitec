<div class="col-2">
    <div class="file-field" >
        <img  id="profile-photo" src="{{ (foto is defined and foto is not null) ? foto : asset('images/generic.jpg') }}"
              class="profile-photo input-photo thumbnail rounded z-depth-1-half avatar-pic float-left" style="width: 150px; height: 150px;" alt="example placeholder avatar">
        <span class="btn-floating blue-gradient opacity-10 mt-0 float-left" style="position: absolute; top: 120px; left: 115px;">
            <i class="fas fa-camera" aria-hidden="true"></i>
                {{ form_widget(form.foto, {'attr' : {'class' : 'image-input'}})  }}
        </span>
    </div>
</div>